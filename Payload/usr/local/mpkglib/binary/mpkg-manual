#!/bin/bash
echo "Macintosh Packager"
echo "Usage: mpkg [parameters] [subparameter] [Extra Arguments]"
echo ""
echo "Parameters: "
echo "-i: Install a package. Requires root privilage. Requires a subparameter."
echo "-r: Removes a package. Requires root privilage. Requires a subparameter."
echo "-h: Shows help."
echo "-l: Shows installed package list (ID only)."
echo "-v: Shows MPKG version."
echo "-p: Shows package information. Requires a subparameter."
echo "-b: Block removal for certain package. Requires a subparameter."
echo ""
echo "Subparameter:"
echo "-i: path to mpack package file"
echo "-r: a package ID"
echo "-p: a package ID"
echo "-b: a package ID"
echo ""
echo "Extra Arguments: "
echo "--ctr-only  : Removes control file only. Requires -r option."
echo "--target    : Set a installation target directory. Ex. --target /Users/user/Desktop"
echo "--usertarget: Set a installation target directory for user directory payload. Ex. --usertarget /Users/user/Desktop"